{
  "name": "memoryapp-desktop",
  "version": "0.1.0",
  "private": true,
  "main": "main.js",
  "scripts": {
    "build": "electron-builder --projectDir .. --config package.json"
  },
  "build": {
    "appId": "com.memoryapp.app",
    "productName": "MemoryApp",
    "files": [
      "desktop/main.js",
      "frontend/dist/**/*",
      "src/**/*",
      "package.json"
    ],
    "directories": {
      "output": "dist-desktop"
    },
    "win": {
      "target": ["nsis"]
    },
    "mac": {
      "target": ["dmg"],
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": ["AppImage"]
    }
  }
}
